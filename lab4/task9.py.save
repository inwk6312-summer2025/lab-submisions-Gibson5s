import yaml
from jinja2 import Environment, FileSystemLoader

# Load YAML data
with open("topology.yml") as file:
    topology = yaml.safe_load(file)

# Set up Jinja2 environment
env = Environment(loader=FileSystemLoader('.'))
template = env.get_template("router_config.j2")

# Generate configs
for router, data in topology["routers"].items():
    config = template.render(router=router, data=data)
    with open(f"{router}_config.txt", "w") as f:
        f.write(config)
    print(f"Generated config for Router:{router}\t ")
